{#
variables:
-----------------------------------
cat - object of current category
Examples:
cat.name = name of current category
-----------------------------------
item - array of entities items
{
    look at entities how to use parameters like "name", "id" and etc
}
use it in loop
parameters:
#}

{% if items is not empty %}

    {% for value in items %}
    
        {% if value != null and value.type == 1 %}

            <a class="{{ class }}" href="{{ value.url }}"><img width="{% if width == 0 %} {{ value.width }} {% else %} {{ width }} {% endif %}px" height="{% if height == 0 %} {{ value.height }} {% else %} {{ height }} {% endif %}px" src="{{ asset('uploads/banners/img/'~value.objUrl) }}"></a>

        {% elseif value != null and value.type == 2 %}    
            <div style="width:{% if width == 0 %} {{ value.width }} {% else %} {{ width }} {% endif %}px;height:{% if height == 0 %} {{ value.height }} {% else %} {{ height }} {% endif %}px;">
                <object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000"
                    codebase="http://active.macromedia.com/flash4/cabs/swflash.cab#version=4,0,0,0"
                    id="name" width="{% if width == 0 %} {{ value.width }} {% else %} {{ width }} {% endif %}" height="{% if height == 0 %} {{ value.height }} {% else %} {{ height }} {% endif %}">
                    <param name="movie" value="{{ asset('uploads/banners/flash/'~value.objUrl) }}">
                    <param name="quality" value="high">
                    <param name="wmode" value="transparent">
                    <embed name="name" src="{{  asset('uploads/banners/flash/'~value.objUrl)  }}"
                        quality="high" wmode="transparent" width="{% if width == 0 %} {{ value.width }} {% else %} {{ width }} {% endif %}" height="{% if height == 0 %} {{ value.height }} {% else %} {{ height }} {% endif %}"
                        type="application/x-shockwave-flash"
                        pluginspage="http://www.macromedia.com/shockwave/download/index.cgi?P1_Prod_Version=ShockwaveFlash">
                    </embed>
                </object> 
                <div style="width:{% if width == 0 %} {{ value.width }} {% else %} {{ width }} {% endif %}px;height: {% if height == 0 %} {{ value.height }} {% else %} {{ height }} {% endif %}px;background: transparent;position: relative;top: -295px;z-index: 9999;" onclick="window.location.href = '{{ value.url }}';"></div>
            </div>
        {% endif %}

    {% endfor %}

{% endif %}